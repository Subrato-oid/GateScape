<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity4"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:text="Applicants Information"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>

    <TextView
        android:id="@+id/creator_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="12dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/creator_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/creator_Sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/creator_roll_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/creation_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Reason"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="textStart"/>

    <TextView
        android:id="@+id/creator_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="12dp"

        android:textSize="20sp"
        android:textAppearance="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>


    <ImageView
        android:id="@+id/approve_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp" />

</LinearLayout>